{
	"name": "Solar Prompt Cookbook Dev Environment",
	"image": "mcr.microsoft.com/devcontainers/python:3",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "latest",
			"installJupyterlab": true
		}
	},
	"customizations": {
		"codespaces": {
			"openFiles": [
				"README.md"
			]
		},
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"github.copilot"
			]
		}
	},
	"postCreateCommand": "pip3 install -r requirements.txt",
	"runArgs": []
}